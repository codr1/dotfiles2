{{- $t := index .themes .theme -}}
/* {{ $t.name }} theme for wofi - managed by chezmoi */

* {
    font-family: JetBrains Mono;
}

window {
    margin: 0px;
    border: 2px solid {{ $t.primary }};
    border-radius: 8px;
    background-color: {{ $t.background }};
    font-size: 15px;
}

#input {
    margin: 10px;
    padding: 10px;
    border: none;
    border-radius: 4px;
    background-color: {{ $t.background_darker }};
    color: {{ $t.foreground }};
    font-family: JetBrains Mono;
}

#inner-box {
    margin: 10px;
    border: none;
    background-color: transparent;
}

#outer-box {
    margin: 0px;
    padding: 2rem;
    border: none;
    background-color: transparent;
}

#scroll {
    margin: 0px;
    border: none;
}

#text {
    margin: 5px;
    border: none;
    color: {{ $t.foreground }};
    font-family: JetBrains Mono;
}

#entry {
    padding: 8px;
    border-radius: 4px;
    background-color: transparent;
    font-family: JetBrains Mono;
}

#entry:selected {
    background-color: {{ $t.primary }};
}

#entry:selected #text {
    color: {{ $t.background }};
    font-weight: bold;
}

#entry:hover {
    background-color: {{ $t.background_alt }};
}
