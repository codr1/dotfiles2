{{- $t := index .themes .theme -}}
# {{ $t.name }} theme for mako - managed by chezmoi

# Font & colors
font=JetBrainsMono Nerd Font 11
background-color={{ $t.background }}
text-color={{ $t.foreground }}
border-color={{ $t.primary }}
border-size=2
border-radius=8
padding=15
margin=10
width=350
height=150

# Position & visibility
anchor=top-right
layer=overlay
max-visible=5

# Icons
icons=1
max-icon-size=48

# Click actions
on-button-left=dismiss
on-button-right=dismiss-all
on-button-middle=invoke-default-action

# Default timeout
default-timeout=5000
ignore-timeout=0

[urgency=low]
default-timeout=3000
border-color={{ $t.foreground_alt }}

[urgency=high]
default-timeout=0
border-color={{ $t.red }}
background-color={{ $t.background_alt }}
