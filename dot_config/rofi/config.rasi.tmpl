{{- $t := index .themes .theme -}}
/* {{ $t.name }} theme for rofi - managed by chezmoi */

configuration {
    modi: "drun,run,window";
    show-icons: true;
    icon-theme: "Papirus";
    font: "JetBrains Mono 14";
    display-drun: " Apps";
    display-run: " Run";
    display-window: " Windows";
    drun-display-format: "{name}";
}

* {
    bg: {{ $t.background }};
    bg-alt: {{ $t.background_alt }};
    bg-dark: {{ $t.background_darker }};
    fg: {{ $t.foreground }};
    fg-alt: {{ $t.foreground_alt }};
    primary: {{ $t.primary }};
    urgent: {{ $t.urgent }};

    background-color: transparent;
    text-color: @fg;
    margin: 0;
    padding: 0;
    spacing: 0;
}

window {
    background-color: @bg;
    border: 2px;
    border-color: @primary;
    border-radius: 8px;
    width: 600px;
    location: center;
    anchor: center;
}

mainbox {
    background-color: @bg;
    children: [ inputbar, listview ];
}

inputbar {
    background-color: @bg-dark;
    padding: 14px;
    spacing: 10px;
    children: [ prompt, entry ];
}

prompt {
    text-color: @primary;
}

entry {
    placeholder: "Search...";
    placeholder-color: @fg-alt;
}

listview {
    background-color: @bg;
    padding: 8px;
    lines: 8;
    columns: 1;
    fixed-height: true;
}

element {
    padding: 10px;
    spacing: 10px;
    border-radius: 4px;
}

element normal.normal {
    background-color: transparent;
    text-color: @fg;
}

element alternate.normal {
    background-color: transparent;
    text-color: @fg;
}

element selected.normal {
    background-color: @primary;
    text-color: @bg;
}

element-icon {
    size: 24px;
}

element-text {
    text-color: inherit;
    vertical-align: 0.5;
}
