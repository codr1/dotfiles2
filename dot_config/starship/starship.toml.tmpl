{{- end }}

{{- if eq .starship_hostname_mode "always" }}

[hostname]
ssh_only = false
style = "bg:#2a5287 fg:#1a1b26"
format = '[ $hostname](bg:#1a4176 fg:#8a8b96)'
{{- else if eq .starship_hostname_mode "ssh-only" }}

[hostname]
ssh_only = true
style = "bg:#2a5287 fg:#1a1b26"
format = '[ $hostname](bg:#1a4176 fg:#8a8b96)'
{{- else }}

[hostname]
disabled = true
{{- end }}

# Performance optimizations
command_timeout = 500

