{{- $t := index .themes .theme -}}
{{- $wp := index .wallpapers $t.wallpaper -}}
# {{ .wm }} config - managed by chezmoi
# Profile: {{ .profile }} | WM: {{ .wm }} | Host: {{ .hostname }} | Theme: {{ $t.name }}

### Variables
set $mod {{ .modkey }}
set $left h
set $down j
set $up k
set $right l
set $term {{ .terminal }}
set $menu wofi --show drun

# Startup
exec mako

{{- if eq .wm "i3" }}
# i3: compositor and wallpaper
exec --no-startup-id picom --config ~/.config/picom/picom.conf -b
exec --no-startup-id feh --bg-fill ~/.local/share/wallpapers/{{ $wp.file }}
{{- else if eq .wm "sway" }}
### Output configuration
output * bg ~/.local/share/wallpapers/{{ $wp.file }} fill
{{- if ne .scale 1.0 }}
output * scale {{ .scale }}
{{- end }}
{{- if .multimonitor }}
# Multi-monitor: create additional output
exec swaymsg create_output
{{- end }}
{{- end }}

{{- if eq .profile "wsl" }}
# WSL-specific: clipboard sync
exec wl-paste --watch ~/.local/bin/clipboard-to-win
exec systemctl --user restart win-to-clipboard
{{- end }}

### Key bindings
    bindsym $mod+Return exec $term
    bindsym $mod+Shift+q kill
    bindsym $mod+d exec $menu

    # Screenshots
{{- if eq .wm "i3" }}
    bindsym $mod+Shift+F3 exec maim ~/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png
    bindsym $mod+Shift+F4 exec maim -s ~/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png
    bindsym Print exec maim | xclip -selection clipboard -t image/png
{{- else if eq .wm "sway" }}
    bindsym $mod+Shift+F3 exec grim ~/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png
    bindsym $mod+Shift+F4 exec grim -g "$(slurp)" ~/Pictures/screenshots/screenshot-$(date +%Y%m%d-%H%M%S).png
    bindsym Print exec grim - | wl-copy
{{- end }}

{{- if eq .wm "i3" }}
    floating_modifier $mod
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+r restart
    bindsym $mod+Shift+e exec i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'
{{- else if eq .wm "sway" }}
    floating_modifier $mod normal
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit sway?' -B 'Yes' 'swaymsg exit'
{{- end }}

# Moving around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Workspaces
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10

    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

# Layout
    bindsym $mod+b splith
    bindsym $mod+v splitv
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split
    bindsym $mod+f fullscreen
    bindsym $mod+Shift+space floating toggle
    bindsym $mod+space focus mode_toggle
    bindsym $mod+a focus parent

# Scratchpad
    bindsym $mod+Shift+minus move scratchpad
    bindsym $mod+minus scratchpad show

# Resize mode
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Media/brightness keys
{{- if eq .wm "i3" }}
    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
    bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
{{- else if eq .wm "sway" }}
    bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
    bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+
{{- end }}

# Status Bar
{{- if eq .wm "i3" }}
exec_always --no-startup-id ~/.config/polybar/launch.sh
{{- else if eq .wm "sway" }}
bar {
    swaybar_command waybar
    position top
}
{{- end }}

### Appearance
gaps outer 0
gaps inner 6

default_border pixel 2
default_floating_border pixel 2
hide_edge_borders smart

# {{ $t.name }} window colors
client.focused          {{ $t.primary }} {{ $t.primary }} {{ $t.background }} {{ $t.secondary }} {{ $t.primary }}
client.focused_inactive {{ $t.background_alt }} {{ $t.background_alt }} {{ $t.foreground }} {{ $t.background_alt }} {{ $t.background_alt }}
client.unfocused        {{ $t.background_alt }} {{ $t.background_alt }} {{ $t.foreground_alt }} {{ $t.background_alt }} {{ $t.background_alt }}
client.urgent           {{ $t.urgent }} {{ $t.urgent }} {{ $t.background }} {{ $t.urgent }} {{ $t.urgent }}

### Floating window rules
for_window [class="pavucontrol"] floating enable
for_window [class="firefox" title="Firefox â€” Sharing Indicator"] floating enable
for_window [class="firefox" title="Picture-in-Picture"] floating enable
for_window [class="firefox" title="About Mozilla Firefox"] floating enable
for_window [class="gnome-control-center"] floating enable
for_window [class="gnome-calculator"] floating enable
for_window [title="Picture-in-picture"] floating enable

{{- if eq .wm "i3" }}
include /etc/i3/config.d/*
{{- else if eq .wm "sway" }}
include /etc/sway/config.d/*
{{- end }}
